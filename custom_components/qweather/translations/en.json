                "data": {
                    "host": "API Host",
                    "api_key": "API Key",
                    "use_token": "Use JSON Web Token",
                    "project_id": "project id",
                    "key_id": "key id",
                    "private_key": "private key",
                    "api_version": "API version, default: v7",
                    "name" : "Name"
                }
            }
        },
        "error": {
            "communication": "Key may be invalid, please check the input value."
